<div class="center jumbotron">
  <form class="form-horizontal">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="30"
           aria-valuemin="0" aria-valuemax="100" style="width:30%">
        <span class="sr-only">30% Complete</span>
      </div>

<%= stylesheet_link_tag "pages.css.scss" %>


<div class="row" xmlns="http://www.w3.org/1999/html">
  <div class="col-sm-4"></div>
</div>


<div class="center jumbotron">
  <div class="form-horizontal">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="30"
           aria-valuemin="0" aria-valuemax="100" style="width:30%">
        <span class="sr-only">30% Complete</span>
      </div>
    </div>

    <%= flash[:error] %>

    <%= simple_form_for @course,:url => url_for(:controller => 'courses', :action => 'create') do |f| %>

    <div class="container">
      <h2>section 1: About the Course</h2>
      <div class="well">

        <div class="form-group">
    <label class="control-label col-sm-2" for="code">Course code</label>
    <div class="col-sm-8">
      <input type="text" name="course[course_code]" class="form-control" id="code" placeholder="Enter your course code">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="name">Course name</label>
    <div class="col-sm-8">
      <input type="text" name="course[course_name]" class="form-control" id="name" placeholder="Enter your course name">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="description">Description:</label>
    <div class="col-sm-8">
    <textarea class="form-control" name="course[course_description]" rows="5" id="description"></textarea>
    </div>
  </div>


  <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Prealables</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" name="course[course_prealables]" id="prealable" placeholder="Prealables de ce cours">
      </div>
  </div>
    </div>
    </div>

    <div class="container">
      <h2>section 2: About the Professor</h2>
      <div class="well">


        <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Professeur Name</label>
      <div class="col-sm-8">
        <input type="text" name="course[prof_name]" class="form-control" id="prealable" placeholder="Your Name">
      </div>
    </div>

  <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Professeur Email</label>
      <div class="col-sm-8">
        <input type="text" name="course[prof_email]" class="form-control" id="prealable" placeholder="Enter your email">
      </div>
  </div>

  <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Professeur Web site</label>
      <div class="col-sm-8">
        <input type="text" name="course[prof_website]" class="form-control" id="site" placeholder="Enter the website">
      </div>
  </div>

  <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">TA</label>
      <div class="col-sm-8">
        <input type="text" name="course[TA]" class="form-control" id="site" placeholder="Enter the website">
      </div>
  </div>

   <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Manuel</label>
      <div class="col-sm-8">
        <textarea class="form-control"  name="course[manuel]" rows="5" id="manuel"></textarea>
    </div>
    </div>

      </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit 'Save', class: 'btn btn-lg btn-success' %>
      <%= link_to 'Next', pages_makeSyllabus_Page2_path, class:'btn btn-lg btn-primary' %>
    </div>
  </div>
        <% end %>
</div>
</div>
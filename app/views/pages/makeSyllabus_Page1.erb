        <div class="form-group">
    <label class="control-label col-sm-2" for="code">Course code</label>
    <div class="col-sm-8">
      <input type="text" name="course[course_code]" class="form-control" id="code" placeholder="Enter your course code">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="name">Course name</label>
    <div class="col-sm-8">
      <input type="text" name="course[course_name]" class="form-control" id="name" placeholder="Enter your course name">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="description">Description:</label>
    <div class="col-sm-8">
    <textarea class="form-control" name="course[course_description]" rows="5" id="description"></textarea>
    </div>
  </div>


  <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Prealables</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" name="course[course_prealables]" id="prealable" placeholder="Prealables de ce cours">
      </div>
  </div>

    </div>
    </div>

    <div class="container">
      <h2>section 2: About the Professor</h2>
      <div class="well">


        <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Professeur Name</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="prealable" placeholder="Prealables de ce cours">
      </div>
    </div>

  <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Professeur Email</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="prealable" placeholder="Enter your email">
      </div>
  </div>

  <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Professeur Web site</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="site" placeholder="Enter the website">
      </div>
  </div>

  <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">TA</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="site" placeholder="Enter the website">
      </div>
  </div>

   <div class="form-group">
      <label class="control-label col-sm-2" for="prealable">Manuel</label>
      <div class="col-sm-8">
        <textarea class="form-control" rows="5" id="manuel"></textarea>
    </div>
    </div>

      </div>
    </div>
<% end %>
